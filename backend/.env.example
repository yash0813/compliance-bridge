# Compliance-Bridge Backend Environment Variables
# Copy this to .env and fill in your values

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/compliance-bridge
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/compliance-bridge

# JWT Secret (change this in production!)
JWT_SECRET=compliance-bridge-secret-key-change-in-production-2024

# JWT Expiry
JWT_EXPIRES_IN=7d

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development
